<%- include('partials/header.ejs') -%>

<form action="/add" method="POST">
  <div class="form-group">
    <label for="inputProduct">Product:</label>
    <select class="form-control" id="inputProduct" name="product">
      <option>Dragon</option>
      <option>Griffon</option>
      <option>Pegasus</option>
      <option>Giant Eagle</option>
    </select>
  </div>
  <div class="form-group">
    <label for="inputRating">Rating:</label>
    <select class="form-control" id="inputRating" name="rating">
      <option>5</option>
      <option>4</option>
      <option>3</option>
      <option>2</option>
      <option>1</option>
    </select>
  </div>
  <div class="form-group">
    <label for="inputFeedback">Feedback:</label>
    <textarea class="form-control" id="inputFeedback" name="feedback"></textarea>
  </div>
  <button class="btn btn-primary" type="submit">Save</button>
</form>

<%- include('partials/footer.ejs') -%>