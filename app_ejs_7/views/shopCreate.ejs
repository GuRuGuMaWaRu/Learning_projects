<%- include('partials/header.ejs', { totals: totals }) -%>

<h1>Add a New Shop</h1>
<form action="/shop/create" method="POST">
  <div class="form-group">
    <label for="nameInput">Name:</label>
    <input class="form-control" type="text" id="nameInput" name="name" />
  </div>
    <div class="form-group">
    <label for="typeInput">Type:</label>
    <select class="form-control" id="typeInput" name="type">
      <% const types = ["Weapons", "Potions", "Equipment", "Magic", "Services", "Other"];
        types.forEach(type => { %>
        <option><%= type %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="descInput">Description:</label>
    <textarea class="form-control" id="descInput" name="description"></textarea>
  </div>
  <div class="form-group">
    <label for="productsInput">Products:</label>
    <input class="form-control" type="text" id="productsInput" name="products" aria-describedby="productsHelp">
    <small id="productsHelp" class="form-text text-muted">List all products in the format of "product, price" separated by semicolon (;). E.g.: "sword, 10; helmet, 5"</small>
  </div>
  <button type="submit">Add</button>
</form>

<%- include('partials/footer.ejs') -%>