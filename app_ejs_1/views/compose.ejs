<%- include("partials/header.ejs") -%>

<form action="/compose" method="POST">
	<div class="form-group">
		<label for="date">Date</label>
		<input type="text" class="form-control" id="date" name="date" value="<%= date %>">
	</div>
	<div class="form-group">
		<label for="title">Title</label>
		<input type="text" class="form-control" id="title" name="title" placeholder="Enter title" autofocus>
	</div>
	<div class="form-group">
		<label for="post">Post</label>
		<textarea class="form-control" id="exampleInputPassword1" name="body" placeholder="Enter your post here" rows="6"></textarea>
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
</form>

