<%- include('./partials/header.ejs', { themes: themes, selectedTheme: item.theme }) -%>

<form action="/item/update/<%= item._id %>" method="POST">
  <div class="form-group">
    <label for="inputTitle">Title:</label>
    <input class="form-control" type="text" name="title" value="<%= item.title %>" id="inputTitle" />
  </div>
  <div class="form-group">
    <label for="inputText">Text:</label>
    <textarea class="form-control" name="text" id="inputText"><%= item.text %></textarea>
  </div>
  <button class="btn btn-success" type="submit" name="themeId" value="<%= item.theme %>">Update</button>
</form>

<%- include('./partials/footer.ejs') -%>